# Skip all for noninteractive shells.
# https://www.gnu.org/software/bash/manual/html_node/Is-this-Shell-Interactive_003f.html
[[ "$-" != *"i"* ]] && return

# Grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Various
alias diff='colordiff'
alias bc='bc -l'
alias wget='wget -c'
alias curl='curl -s'
alias path='echo -e ${PATH//:/\\n} | sort'
alias now='date +"%T"'
alias nowtime='now'
alias nowdate='date +"%d-%m-%Y"'
alias iptraf-ng='TERM=xterm iptraf-ng'
alias git-stubborn='git ls-files -m | xargs -i git update-index --assume-unchanged "{}"'
alias most-used='HISTTIMEFORMAT="" history | sed -nre "s/^\s*[0-9]+\s*(\w+).*$/\1/p" | sort | uniq -c | sort -rg | head -15'
alias mykey='cat ~/.ssh/id_rsa.pub'

